  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Index</title>
</head>
  <body>
    {{#if logged}}
      <form action="/comment/new" method="post">
        <div>
          <label for="comment"></label>
          <textarea name="comment" id="comment"></textarea>
        </div>
        <button type="submit">SEND</button>
      </form>
    {{/if}}
